extends layout 
 
block content 
  h1= title 
 
  form(id='EarphonesForm', action="/resource/earphones", method="POST") 
    div.form-group 
        label.earphonesAttr(for='brand') Earphones brand 
        input#brand(type='text', name='brand') 
    div.form-group 
        label.earphonesAttr(for='model') Earphones model 
        input#model(type='text', name='model') 
    div.form-group 
        label.earphonesAttr(for='price') Earphones price 
        input#price(type='number', name='price') 
    input(type="submit") 
 
  script. 
    document.forms['EarphonesForm'].addEventListener('submit', (event) => { 
      event.preventDefault(); 
      // TODO do something here to show user that form is being submitted 
      fetch(event.target.action, { 
        method: 'POST', 
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Save succeded") 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Save failed " + error ) 
      }); 
    }); 